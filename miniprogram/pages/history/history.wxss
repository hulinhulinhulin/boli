/* pages/history/history.wxss */

/* 头部操作栏 */
.header-bar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.clear-btn {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #f5222d;
  background: #fff1f0;
  border-radius: 8rpx;
}

.clear-btn:active {
  background: #ffccc7;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background: #fff;
  border-radius: 14rpx;
  padding: 10rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #666;
  border-radius: 10rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: #1890ff;
  color: #fff;
  font-weight: 500;
}

/* 统计栏 */
.stats-row {
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-radius: 14rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-num {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}

.stats-label {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 历史列表 */
.history-list {
  background: #fff;
  border-radius: 14rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.list-date {
  margin-bottom: 12rpx;
}

.date-header {
  padding: 24rpx 28rpx 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  background: #fafafa;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 28rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.history-item:last-child {
  border-bottom: none;
}

.history-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 24rpx;
}

.bg-success {
  background: #52c41a;
}

.bg-warning {
  background: #faad14;
}

.history-content {
  flex: 1;
}

.history-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-name {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.history-quantity {
  font-size: 36rpx;
  font-weight: bold;
}

.history-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-location {
  font-size: 28rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
}

.history-time {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty {
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 30rpx;
  color: #999;
}

/* 文字颜色 */
.text-success { color: #52c41a; }
.text-warning { color: #faad14; }

/* 删除按钮 */
.delete-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  margin-left: 16rpx;
}

.delete-btn:active {
  color: #f5222d;
}
