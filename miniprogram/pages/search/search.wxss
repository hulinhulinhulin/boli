/* pages/search/search.wxss */

.search-box {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 36rpx;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 44rpx;
  padding: 20rpx 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.search-icon {
  font-size: 36rpx;
  margin-right: 14rpx;
}

.search-input {
  flex: 1;
  font-size: 36rpx;
  color: #333;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #999;
}

.search-clear {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ccc;
  border-radius: 50%;
  font-size: 28rpx;
  color: #fff;
}

.search-btn {
  padding: 20rpx 40rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 44rpx;
  font-size: 34rpx;
  border: none;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.result-count {
  font-weight: normal;
  color: #999;
  font-size: 30rpx;
}

/* 货物卡片样式（复用） */
.goods-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 14rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.goods-info {
  flex: 1;
}

.goods-name {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 14rpx;
}

.goods-detail {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.goods-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.goods-stock {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 24rpx;
  border-left: 1rpx solid #f0f0f0;
  margin-left: 24rpx;
}

.stock-num {
  font-size: 44rpx;
  font-weight: bold;
}

.stock-label {
  font-size: 26rpx;
  color: #999;
}

.text-success { color: #52c41a; }
.text-warning { color: #faad14; }
.text-error { color: #f5222d; }

/* 搜索历史 */
.history-section {
  margin-top: 48rpx;
}

.clear-history {
  color: #1890ff;
  font-size: 30rpx;
  font-weight: normal;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-tag {
  padding: 16rpx 32rpx;
  background: #fff;
  border-radius: 36rpx;
  font-size: 30rpx;
  color: #666;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

/* 默认提示 */
.default-tips {
  margin-top: 72rpx;
  padding: 36rpx;
  background: #fff;
  border-radius: 14rpx;
}

.tip-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.tip-item {
  font-size: 32rpx;
  color: #666;
  line-height: 1.8;
}

/* 空状态 */
.empty {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-text {
  font-size: 36rpx;
  color: #333;
}

.empty-hint {
  font-size: 30rpx;
  color: #999;
  margin-top: 16rpx;
}
