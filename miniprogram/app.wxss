/* 全局样式 app.wxss */

/* 主题色 */
page {
  --primary-color: #1890ff;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #f5222d;
  --text-color: #333333;
  --text-secondary: #666666;
  --text-muted: #999999;
  --bg-color: #f5f5f5;
  --white: #ffffff;
  --border-color: #e8e8e8;
  --shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  
  background-color: var(--bg-color);
  font-size: 36rpx;
  color: var(--text-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.container {
  padding: 20rpx;
}

/* 卡片样式 */
.card {
  background: var(--white);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow);
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 40rpx;
  border-radius: 12rpx;
  font-size: 34rpx;
  border: none;
  transition: all 0.2s;
}

.btn-primary {
  background: var(--primary-color);
  color: var(--white);
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-success {
  background: var(--success-color);
  color: var(--white);
}

.btn-warning {
  background: var(--warning-color);
  color: var(--white);
}

.btn-block {
  width: 100%;
}

.btn-small {
  padding: 14rpx 28rpx;
  font-size: 28rpx;
}

/* 输入框 */
.input {
  width: 100%;
  padding: 28rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 34rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
}

.input::placeholder {
  color: #999;
}

.input:focus {
  border-color: var(--primary-color);
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  display: block;
  margin-bottom: 12rpx;
  font-weight: 500;
  color: var(--text-color);
}

/* 列表样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: var(--white);
  border-bottom: 1rpx solid var(--border-color);
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: #fafafa;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.tag-primary {
  background: #e6f7ff;
  color: var(--primary-color);
}

.tag-success {
  background: #f6ffed;
  color: var(--success-color);
}

.tag-warning {
  background: #fffbe6;
  color: var(--warning-color);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: var(--text-muted);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

/* Flex工具类 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }

/* 文字 */
.text-primary { color: var(--primary-color); }
.text-success { color: var(--success-color); }
.text-warning { color: var(--warning-color); }
.text-error { color: var(--error-color); }
.text-muted { color: var(--text-muted); }
.text-center { text-align: center; }
.text-bold { font-weight: bold; }

/* 标题 */
.title {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.subtitle {
  font-size: 32rpx;
  color: var(--text-secondary);
}
